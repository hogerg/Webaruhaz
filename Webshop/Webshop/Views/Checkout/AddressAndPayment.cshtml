@model Webshop.Models.Order

@{
    ViewBag.Title = "AddressAndPayment";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{

    <h2>Megrendelés</h2>
    <fieldset>
        <legend>Szállítási információk</legend>
        @Html.EditorForModel()
    </fieldset>
    <br />
    <fieldset>
        <div class="row">
            <div class="col-md-1 editor-field text-right">
                @Html.CheckBox("Accept")
            </div>
            <div class="col-md-11 editor-label">
                @Html.Label("Elfogadom az általános felhasználói feltételeket")
            </div>
        </div>
    </fieldset>
    <hr />
    <input type="submit" value="Rendelés feladása" />
}