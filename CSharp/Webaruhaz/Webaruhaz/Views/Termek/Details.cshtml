}
<div class="container">
    <div class="row">
        <div class="col-md-6 text-center">
            <img class="img-responsive" src="~/Content/mocklaptop.jpg" alt="">
            <div class="row-fluid">
                <a href="/" class="btn btn-default text-left">Vissza</a>
                <a href="#" class="btn btn-primary text-center">Kosárba</a>
