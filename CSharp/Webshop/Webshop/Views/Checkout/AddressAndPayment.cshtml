@model Webshop.Models.Order

@{
    ViewBag.Title = "Vásárlás";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    <div class="text-center">

        <h2>Megrendelés</h2>
        <hr/>
        
        <fieldset>
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-md-5 control-label text-right" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-md-2"} })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger col-md-4" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "col-md-5 control-label text-right" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control col-md-2"} })
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger col-md-4" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "col-md-5 control-label text-right" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control col-md-2"} })
                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger col-md-4" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-md-5 control-label text-right" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control col-md-2"} })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger col-md-4" })
                </div>
            </div>
        </fieldset>
        <br />
        <fieldset>
            <div class="row">
                @Html.CheckBox("Accept")
                @Html.Label("Elfogadom az általános felhasználói feltételeket")
            </div>
        </fieldset>
        <hr />
        <input class="btn btn-default" type="submit" value="Rendelés feladása" />

    </div>
}