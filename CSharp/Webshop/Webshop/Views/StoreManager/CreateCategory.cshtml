@model Webshop.Models.Category

@{
    ViewBag.Title = "Kategória";
}

@using (Html.BeginForm("CreateCategory", "StoreManager", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2 class="text-center">Kategória létrehozása</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger col-md-6 col-md-offset-3" })

        <div class="form-group">
            @Html.LabelFor(model => model.Name, "Név", htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-md-2" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger col-md-4" })
                <span class="text-danger col-md-4">@ViewBag.CategoryName</span>
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-5">Képfeltöltés</div>
            <div class="col-md-6">
                <input type="file" id="fileToUpload" name="fileToUpload" />
                <span class="text-danger col-md-4">@ViewBag.Picture</span>
            </div>
        </div>

        <div class="form-group">
            <div class="text-center">
                <input type="submit" value="Létrehozás" class="btn btn-default" /> |
                @Html.ActionLink("Vissza", "Categories")
            </div>
        </div>
    </div>
}
