@model Webshop.Models.Product

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2 class="text-center">Termék módosítása</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger col-md-6 col-md-offset-3" })
        @Html.HiddenFor(model => model.ProductID)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, "Név", htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-md-2" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger col-md-4" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Price, "Ár", htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control col-md-2" } })
                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger col-md-4" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CategoryID, "Kategória", htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-6">
                @Html.DropDownList("CategoryID", null, htmlAttributes: new { @class = "form-control col-md-2" })
                @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger col-md-4" })
            </div>
        </div>

        <div class="form-group">
            <div class="text-center">
                <input type="submit" value="Módosítás" class="btn btn-default" /> |
                @Html.ActionLink("Vissza", "Index")
            </div>
        </div>
    </div>
}
